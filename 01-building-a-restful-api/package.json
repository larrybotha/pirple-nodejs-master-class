{
  "name": "01-building-a-restful-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "prestart": "rm -rf dist && npm run tsc",
    "prestart:homework-02": "npm run prestart && npm run copy:homework-02",
    "start": "concurrently npm:watch:server npm:watch:tsc npm:watch:test",
    "start:debug": "concurrently npm:watch:server:debug npm:watch:tsc npm:watch:test",
    "start:homework-01": "concurrently npm:watch:server:homework-01 npm:watch:tsc npm:watch:test",
    "start:homework-02": "concurrently npm:watch:server:homework-02 npm:watch:tsc npm:watch:test",
    "start:homework-02:debug": "concurrently npm:watch:server:homework-02:debug npm:watch:tsc npm:watch:test",
    "test": "jest",
    "test:api": "npm test -- -c ./config/tests/jest.newman.js",
    "tsc": "tsc",
    "copy:homework-02": "cp -r ./homework-02/https ./dist/homework-02",
    "watch:tsc": "npm run tsc -- -w",
    "watch:test": "npm run test -- --watch",
    "watch:test:api": "npm run test:api -- --watch --runInBand",
    "watch:server": "source set-env.sh && nodemon dist/src",
    "watch:server:debug": "source set-env.sh .env && nodemon --inspect dist/src",
    "watch:server:homework-01": "source set-env.sh .env && nodemon dist/homework-01/src",
    "watch:server:homework-02": "source set-env.sh ./homework-02/.env && nodemon dist/homework-02/src",
    "watch:server:homework-02:debug": "source set-env.sh ./homework-02/.env && nodemon --inspect dist/homework-02/src"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "concurrently": "4.1.0",
    "dotenv": "6.2.0",
    "jest": "23.6.0",
    "nodemon": "1.18.9",
    "strest": "0.0.70"
  }
}
